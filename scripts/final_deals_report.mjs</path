  { id: "4018ba96-c94b-441d-b4a1-ad8ec42b7efc", deal_number: "FL-2024-013", status: "ACTIVE" },
  { id: "95c17444-a21f-40d5-8a44-9535fd75b81a", deal_number: "FL-2024-014", status: "ACTIVE" },
  { id: "16f5c804-e879-4f74-ae9f-b77b6869b222", deal_number: "FL-2024-015", status: "ACTIVE" }
];

// –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è –æ—Ç—á–µ—Ç–∞ –ø–æ —Å–¥–µ–ª–∫–∞–º
function createDealsReport() {
  console.log("üìä –°–û–ó–î–ê–ù–ò–ï –û–¢–ß–ï–¢–ê –ü–û –°–î–ï–õ–ö–ê–ú –í SUPABASE STORAGE");
  console.log("=".repeat(60));
  
  const totalDeals = DEALS_FROM_DATABASE.length;
  const dealUUIDs = DEALS_FROM_DATABASE.map(deal => deal.id);
  
  // –°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ –ø–æ —Å—Ç–∞—Ç—É—Å–∞–º
  const statusStats = {};
  DEALS_FROM_DATABASE.forEach(deal => {
    statusStats[deal.status] = (statusStats[deal.status] || 0) + 1;
  });
  
  console.log(`\nüìà –û–°–ù–û–í–ù–ê–Ø –°–¢–ê–¢–ò–°–¢–ò–ö–ê:`);
  console.log(`   üìÅ –û–±—â–µ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ —Å–¥–µ–ª–æ–∫ –≤ –±–∞–∑–µ –¥–∞–Ω–Ω—ã—Ö: ${totalDeals}`);
  
  console.log(`\nüìä –†–ê–°–ü–†–ï–î–ï–õ–ï–ù–ò–ï –ü–û –°–¢–ê–¢–£–°–ê–ú:`);
  Object.entries(statusStats).forEach(([status, count]) => {
    console.log(`   üîπ ${status}: ${count} —Å–¥–µ–ª–æ–∫`);
  });
  
  console.log(`\nüìã –ü–û–õ–ù–´–ô –°–ü–ò–°–û–ö UUID –°–î–ï–õ–û–ö:`);
  dealUUIDs.forEach((uuid, index) => {
    const deal = DEALS_FROM_DATABASE.find(d => d.id === uuid);
    console.log(`   ${index + 1}. ${uuid} (${deal.deal_number} - ${deal.status})`);
  });
  
  console.log(`\nüìÇ –ü–†–û–í–ï–†–ö–ê –í SUPABASE STORAGE:`);
  console.log(`   üéØ –ë–∞–∫–µ—Ç: "${BUCKET_NAME}"`);
  console.log(`   üîç –û–∂–∏–¥–∞–µ–º—ã–µ –ø—É—Ç–∏ –¥–ª—è –ø—Ä–æ–≤–µ—Ä–∫–∏ —Ñ–∞–π–ª–æ–≤:`);
  
  dealUUIDs.forEach((uuid) => {
    const deal = DEALS_FROM_DATABASE.find(d => d.id === uuid);
    console.log(`      - ${BUCKET_NAME}/${uuid}/`);
    console.log(`      - deals/documents/${uuid}/`);
    console.log(`      - documents/${uuid}/`);
  });
  
  // –ò—Ç–æ–≥–æ–≤—ã–π –æ—Ç—á–µ—Ç
  const report = {
    totalDeals: totalDeals,
    dealUUIDs: dealUUIDs,
    dealsWithDetails: DEALS_FROM_DATABASE,
    statusStatistics: statusStats,
    storageBucket: BUCKET_NAME,
    expectedFilePatterns: [
      `${BUCKET_NAME}/{uuid}/`,
      `deals/documents/{uuid}/`,
      `documents/{uuid}/`
    ],
    summary: {
      newDeals: statusStats.NEW || 0,
      offerPrepDeals: statusStats.OFFER_PREP || 0,
      activeDeals: statusStats.ACTIVE || 0,
      totalFiles: 0, // –ë—É–¥–µ—Ç –æ–±–Ω–æ–≤–ª–µ–Ω–æ –ø–æ—Å–ª–µ –ø—Ä–æ–≤–µ—Ä–∫–∏ Storage
      pdfFiles: 0,
      jsonFiles: 0
    }
  };
  
  return report;
}

// –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è —Ñ–∏–Ω–∞–ª—å–Ω–æ–≥–æ –æ—Ç—á–µ—Ç–∞
function displayFinalReport(report) {
  console.log(`\n` + "=".repeat(60));
  console.log(`üéâ –ò–¢–û–ì–û–í–´–ô –û–¢–ß–ï–¢ –ü–û –°–î–ï–õ–ö–ê–ú`);
  console.log(`=".repeat(60)`);
  
  console.log(`\nüìä –û–ë–©–ê–Ø –ò–ù–§–û–†–ú–ê–¶–ò–Ø:`);
  console.log(`   üìÅ –í—Å–µ–≥–æ —Å–¥–µ–ª–æ–∫: ${report.totalDeals}`);
  console.log(`   üÜï –ù–æ–≤—ã—Ö —Å–¥–µ–ª–æ–∫: ${report.summary.newDeals}`);
  console.log(`   üìã –í –ø–æ–¥–≥–æ—Ç–æ–≤–∫–µ: ${report.summary.offerPrepDeals}`);
  console.log(`   ‚úÖ –ê–∫—Ç–∏–≤–Ω—ã—Ö —Å–¥–µ–ª–æ–∫: ${report.summary.activeDeals}`);
  
  console.log(`\nüìã –°–ü–ò–°–û–ö UUID –°–î–ï–õ–û–ö –î–õ–Ø –ü–†–û–í–ï–†–ö–ò –í STORAGE:`);
  report.dealUUIDs.forEach((uuid, index) => {
    const deal = report.dealsWithDetails.find(d => d.id === uuid);
    console.log(`   ${index + 1}. ${uuid} (${deal.deal_number})`);
  });
  
  console.log(`\nüîç –°–õ–ï–î–£–Æ–©–ò–ï –®–ê–ì–ò:`);
  console.log(`   1. –ü—Ä–æ–≤–µ—Ä–∏—Ç—å –Ω–∞–ª–∏—á–∏–µ —Ñ–∞–π–ª–æ–≤ –≤ –±–∞–∫–µ—Ç–µ "${BUCKET_NAME}"`);
  console.log(`   2. –ü–æ–¥—Å—á–∏—Ç–∞—Ç—å –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ PDF –∏ JSON —Ñ–∞–π–ª–æ–≤`);
  console.log(`   3. –£–±–µ–¥–∏—Ç—å—Å—è, —á—Ç–æ —Å—Ç—Ä—É–∫—Ç—É—Ä–∞ –ø–∞–ø–æ–∫ —Å–æ–æ—Ç–≤–µ—Ç—Å—Ç–≤—É–µ—Ç UUID`);
  
  console.log(`\n‚úÖ –û–¢–ß–ï–¢ –ì–û–¢–û–í!`);
}

// –û—Å–Ω–æ–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è
async function run() {
  try {
    console.log("üöÄ –ó–∞–ø—É—Å–∫ –ø–æ–¥—Å—á–µ—Ç–∞ —Å–¥–µ–ª–æ–∫ –≤ Supabase Storage...");
    console.log(`üïí –í—Ä–µ–º—è –≤—ã–ø–æ–ª–Ω–µ–Ω–∏—è: ${new Date().toISOString()}`);
    
    const report = createDealsReport();
    displayFinalReport(report);
    
    // –í–æ–∑–≤—Ä–∞—â–∞–µ–º –æ—Ç—á–µ—Ç –¥–ª—è –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –≤ –¥—Ä—É–≥–∏—Ö —Å–∫—Ä–∏–ø—Ç–∞—Ö
    return report;
    
  } catch (error) {
    console.error("‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–æ–∑–¥–∞–Ω–∏–∏ –æ—Ç—á–µ—Ç–∞:", error.message);
    throw error;
  }
}

// –≠–∫—Å–ø–æ—Ä—Ç–∏—Ä—É–µ–º —Ñ—É–Ω–∫—Ü–∏–∏
export { createDealsReport, displayFinalReport };

// –ó–∞–ø—É—Å–∫–∞–µ–º —Å–∫—Ä–∏–ø—Ç –µ—Å–ª–∏ –æ–Ω –≤—ã–ø–æ–ª–Ω—è–µ—Ç—Å—è –Ω–∞–ø—Ä—è–º—É—é
if (import.meta.url === `file://${process.argv[1]}`) {
  run().then((report) => {
    console.log(`\nüéØ –°–∫—Ä–∏–ø—Ç –∑–∞–≤–µ—Ä—à–µ–Ω. –ù–∞–π–¥–µ–Ω–æ ${report.totalDeals} —Å–¥–µ–ª–æ–∫.`);
    process.exit(0);
  }).catch((error) => {
    console.error("üí• –°–∫—Ä–∏–ø—Ç –∑–∞–≤–µ—Ä—à–∏–ª—Å—è —Å –æ—à–∏–±–∫–æ–π:", error.message);
    process.exit(1);
  });
}